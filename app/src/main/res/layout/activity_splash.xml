<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorYellow">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="- ANDROID CLUB - "
        android:textColor="@color/colorBlack"
        android:layout_marginTop="10dp"
        android:id="@+id/android_club"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="www.vitchennaivibrance.com"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:textColor="@color/colorBlack"
        android:id="@+id/textView" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/shapes"
        android:foregroundGravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/amazon"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/presents"
        android:layout_toLeftOf="@+id/amazon" />
    <ImageView
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:src="@drawable/amazon"
        android:id="@+id/amazon"
        android:layout_below="@+id/android_club"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        android:foregroundGravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Presents "
        android:textColor="@color/colorBlack"
        android:layout_marginTop="1dp"
        android:id="@+id/presents"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/amazon"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/presents"
        android:gravity="center"
        android:layout_marginTop="110dp"
        android:text="ViBRANCE'16"
        android:textColor="@color/colorBrown"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/vib"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vib"
        android:text="TREASURE HUNT"
        android:gravity="center"
        android:textSize="40dp"
        android:textColor="@color/colorBrown"
        android:textStyle="bold"



        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/textView"
        android:layout_alignLeft="@+id/amazon"
        android:layout_alignStart="@+id/amazon"
        android:id="@+id/linearLayout">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        android:text="In\nAssociation\nWith"
        android:textStyle="bold"
            android:gravity="right"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/mtv"
            android:id="@+id/mtv"
            />
    </LinearLayout>
</RelativeLayout>